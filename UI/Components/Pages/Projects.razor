@page "/projects"
@rendermode InteractiveServer
@inherits ProjectsBase

<!--
    Proje Yönetimi - CRUD Sayfası (Context7, .NET 8, Razor)
    - Kod-behind ile tam ayrım
    - Erişilebilirlik ve modern UI
    - Temiz, okunabilir ve best practice'e uygun
-->

<PageTitle>Projeler</PageTitle>

<div class="container mt-4">
    <h2>Projeler</h2>

    <EditForm Model="editProject" OnValidSubmit="HandleValidSubmit" FormName="ProjectForm" class="mb-4">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="row g-2 align-items-end">
            <div class="col-md-4">
                <label for="projectName" class="form-label">Proje Adı</label>
                <InputText id="projectName" class="form-control" @bind-Value="editProject.Name" />
            </div>
            <div class="col-md-6">
                <label for="projectDesc" class="form-label">Açıklama</label>
                <InputText id="projectDesc" class="form-control" @bind-Value="editProject.Description" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">@((editProject.Id == 0) ? "Ekle" : "Güncelle")</button>
                @if (editProject.Id != 0)
                {
                    <button type="button" class="btn btn-secondary w-100 mt-1" @onclick="CancelEdit">Vazgeç</button>
                }
            </div>
        </div>
    </EditForm>

    <hr />

    @if (projects == null)
    {
        <div class="alert alert-info">Yükleniyor...</div>
    }
    else if (!projects.Any())
    {
        <div class="alert alert-warning">Hiç proje yok.</div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Adı</th>
                    <th scope="col">Açıklama</th>
                    <th scope="col" class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in projects)
                {
                    <tr>
                        <td>@project.Name</td>
                        <td>@project.Description</td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => EditProject(project)">Düzenle</button>
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteProject(project.Id)">Sil</button>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <!-- Görevler Tablosu -->
                            <div class="ms-4">
                                <h6>Görevler</h6>
                                @if (project.TaskItems == null || !project.TaskItems.Any())
                                {
                                    <div class="alert alert-light py-1">Bu projeye ait görev yok.</div>
                                }
                                else
                                {
                                    <table class="table table-sm mb-2">
                                        <thead>
                                            <tr>
                                                <th>Adı</th>
                                                <th>Tamamlandı mı?</th>
                                                <th class="text-end">İşlemler</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var task in project.TaskItems)
                                            {
                                                <tr>
                                                    <td>@task.Name</td>
                                                    <td>
                                                        <InputCheckbox class="form-check-input"
                                                                       Value="task.IsComplete"
                                                                       ValueChanged="async (bool value) => await ToggleTaskComplete(task, value)"
                                                                       ValueExpression="@(() => task.IsComplete)" />
                                                    </td>
                                                    <td class="text-end">
                                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteTask(task.Id, project.Id)">Sil</button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                                <!-- Görev Ekleme Formu -->
                                <EditForm Model="newTask" OnValidSubmit="@(() => AddTask(project.Id))" FormName="TaskForm" class="row g-2 align-items-end mb-2">
                                    <div class="col-md-9">
                                        <InputText class="form-control" placeholder="Görev adı" @bind-Value="newTask.Name" />
                                    </div>
                                    <div class="col-md-3">
                                        <button type="submit" class="btn btn-success w-100">Ekle</button>
                                    </div>
                                </EditForm>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
